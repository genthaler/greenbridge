<assembly>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/</directory>
            <outputDirectory>/conversations</outputDirectory>
            <includes>
                <include>**/conversation-recorder*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/freemind/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*.jar</include>
                <include>**/*.groovy</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/freemind/</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>