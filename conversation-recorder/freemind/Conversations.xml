<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin label="plugins/Conversations">
		<plugin_classpath jar="script/scripting_plugin.jar"/>
		<plugin_classpath jar="script/groovy-all-1.5.6.jar"/>
		<plugin_classpath jar="conversations/conversation-recorder-${version}.jar"/>
		<plugin_classpath jar="conversations/commons-beanutils-1.8.0.jar"/>
		<plugin_classpath jar="conversations/commons-collections-3.2.1.jar"/>
                <plugin_classpath jar="conversations/commons-lang-2.4.jar"/>
		<plugin_classpath jar="conversations/ezmorph-1.0.6.jar"/>
                <plugin_classpath jar="conversations/httpcore-4.0.1.jar"/>
                <plugin_classpath jar="conversations/httpclient-4.0.jar"/>
                <plugin_classpath jar="conversations/json-lib-2.3-jdk15.jar"/>
                <plugin_classpath jar="conversations/commons-logging-1.1.jar"/>
                <plugin_classpath jar="conversations/xml-resolver-1.2.jar"/>
		<plugin_classpath jar="conversations/swingx-0.9.7.jar" />
		<plugin_classpath jar="conversations/dom4j-1.6.1.jar" />
                <plugin_classpath jar="conversations/jaxen-1.1.jar" />
		<plugin_classpath jar="conversations/httpmime-4.0.1.jar" />
		<plugin_classpath jar="conversations/apache-mime4j-0.6.jar" />
		<plugin_classpath jar="conversations/basicplayer3.0.jar" />
		<plugin_classpath jar="conversations/jl1.0.jar" />
		<plugin_classpath jar="conversations/kj_dsp1.1.jar" />
		<plugin_classpath jar="conversations/mp3spi1.9.4.jar" />
		<plugin_classpath jar="conversations/tritonus_share.jar" />

	<plugin_registration class_name="plugins.script.ScriptingRegistration" isPluginBase="true">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
	</plugin_registration>
	<plugin_action 
		name="Manage Conversation" 
		documentation="Load the conversation manager."
		label="plugins/ManageConversation"
		key_stroke="control PAUSE"
		base="freemind.extensions.ModeControllerHookAdapter" 
		class_name="plugins.script.ScriptingEngine">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/extras/first/scripting/groovy1"/>
		<plugin_property name="ScriptLocation" value="plugins/conversations/manageConversation.groovy" />
	</plugin_action> 
	<plugin_action 
		name="New Conversation Tag..." 
		documentation="Create a new tag for the conversation." 
		label="plugins/NewConversationTag"
		key_stroke="PAUSE"
		base="freemind.extensions.ModeControllerHookAdapter" 
		class_name="plugins.script.ScriptingEngine">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/extras/first/scripting/groovy2"/>
        <plugin_property name="ScriptLocation" value="plugins/conversations/newTag.groovy" />
	</plugin_action> 
</plugin>