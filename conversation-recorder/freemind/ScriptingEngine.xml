<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin label="plugins/ScriptingEngine">
		<plugin_classpath jar="script/scripting_plugin.jar"/>
		<plugin_classpath jar="script/groovy-all-1.6.7.jar"/>
		<plugin_classpath jar="script/conversation-recorder-0.9.0.jar"/>
		<plugin_classpath jar="script/commons-beanutils-1.8.0.jar"/>
		<plugin_classpath jar="script/commons-collections-3.2.1.jar"/>
        <plugin_classpath jar="script/commons-lang-2.4.jar"/>
		<plugin_classpath jar="script/ezmorph-1.0.6.jar"/>
        <plugin_classpath jar="script/httpcore-4.0.1.jar"/>
        <plugin_classpath jar="script/httpclient-4.0.jar"/>
        <plugin_classpath jar="script/json-lib-2.3-jdk15.jar"/>
        <plugin_classpath jar="script/commons-logging-1.1.jar"/>
        <plugin_classpath jar="script/xml-resolver-1.2.jar"/>
		<plugin_classpath jar="script/swingx-0.9.7.jar" />
		<plugin_classpath jar="script/dom4j-1.6.1.jar" />
        <plugin_classpath jar="script/jaxen-1.1.jar" />
		<plugin_classpath jar="script/httpmime-4.0.1.jar" />
		<plugin_classpath jar="script/apache-mime4j-0.6.jar" />
		<plugin_classpath jar="script/basicplayer3.0.jar" />
		<plugin_classpath jar="script/jl1.0.jar" />
		<plugin_classpath jar="script/kj_dsp1.1.jar" />
		<plugin_classpath jar="script/mp3spi1.9.4.jar" />
		<plugin_classpath jar="script/tritonus_share.jar" />

	<plugin_registration class_name="plugins.script.ScriptingRegistration" isPluginBase="true">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
	</plugin_registration>
	<plugin_action documentation="%plugins/ScriptingEngine.xml_documentation" 
		name="%plugins/ScriptingEngine.xml_name" 
		base="freemind.extensions.ModeControllerHookAdapter" 
		label="plugins/ScriptingEngine.xml" 
		class_name="plugins.script.ScriptingEngine" 
		key_stroke="%keystroke_plugins/ScriptingEngine.keystroke.evaluate">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/extras/first/scripting/evaluate"/>
		<!-- not an installed script -->
        <plugin_property name="ScriptLocation" value="" />
	</plugin_action>
	<plugin_action documentation="%plugins/ScriptEditor.xml_documentation" 
		name="%plugins/ScriptEditor.xml_name" 
		base="freemind.extensions.ModeControllerHookAdapter" 
		label="plugins/ScriptEditor.xml" 
		class_name="plugins.script.ScriptEditor" 
		>
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/extras/first/scripting/edit"/>
	</plugin_action>
	<plugin_action 
		name="Manage Conversation" 
		documentation="Start/stop recording the conversation. Upload to server." 
		label="plugins/GroovyScript1" 
		key_stroke="control PAUSE"
		base="freemind.extensions.ModeControllerHookAdapter" 
		class_name="plugins.script.ScriptingEngine">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/extras/first/scripting/groovy1"/>
		<plugin_property name="ScriptLocation" value="plugins/script/manageConversation.groovy" />
	</plugin_action> 
	<plugin_action 
		name="New Conversation Tag..." 
		documentation="Create a new tag for the conversation." 
		label="plugins/GroovyScript2" 
		key_stroke="PAUSE"
		base="freemind.extensions.ModeControllerHookAdapter" 
		class_name="plugins.script.ScriptingEngine">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
		<plugin_menu location="menu_bar/extras/first/scripting/groovy2"/>
        <plugin_property name="ScriptLocation" value="plugins/script/newTag.groovy" />
	</plugin_action> 
</plugin>