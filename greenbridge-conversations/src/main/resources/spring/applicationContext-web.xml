<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Spring mvc beans i.e. controllers, lookups  -->
  <bean id="tagManager" class="com.googlecode.greenbridge.conversations.manager.impl.TagManagerImpl" >
    <property name="dao" ref="conversationDao" />
    <property name="slugGenerator" ref="slugger" />
  </bean>

  <bean id="personManager" class="com.googlecode.greenbridge.conversations.manager.impl.PersonManagerImpl" >
    <constructor-arg ref="conversationDao" />
    <constructor-arg ref="slugger" />
  </bean>


  <bean id="chapterToolParser" class="com.googlecode.greenbridge.conversations.manager.impl.ChapterToolXMLTagParserStrategy" >
      <constructor-arg ref="tagManager"/>
  </bean>

  <bean id="freemindTagConverter" class="com.googlecode.greenbridge.conversations.manager.impl.DefaultFreemindNodeToMediaTag">
      <constructor-arg ref="tagManager"/>
      <constructor-arg ref="personManager"/>
  </bean>

  <bean id="freemindParser" class="com.googlecode.greenbridge.conversations.manager.impl.FreemindXmlTagParserStrategy">
      <constructor-arg ref="tagManager" />
      <constructor-arg ref="freemindTagConverter" />
  </bean>

  <bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping" />

  <bean id="slugger" class="com.googlecode.greenbridge.conversations.manager.impl.SluggerImpl" />

  <bean id="conversationManager" class="com.googlecode.greenbridge.conversations.manager.impl.ConversationManagerImpl" >
      <constructor-arg  ref="conversationDao" />
      <constructor-arg  ref="slugger" />
      <constructor-arg  ref="freemindParser" />
      <constructor-arg  ref="chapterToolParser" />
      <constructor-arg  ref="personManager" />
  </bean>
  <bean id="projectManager" class="com.googlecode.greenbridge.conversations.manager.impl.ProjectManagerImpl" >
      <constructor-arg  ref="conversationDao" />
  </bean>
  <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>

  <bean id="storeMediaStrategy" class="com.googlecode.greenbridge.conversations.web.StoreMediaStrategyImpl" >
    <constructor-arg value="${ofla.dir}" />
  </bean>
  <bean id="storeFreemindStrategy" class="com.googlecode.greenbridge.conversations.web.StoreMediaStrategyImpl" >
    <constructor-arg value="${freemind.dir}" />
  </bean>
  <bean name="/tag/**" class="com.googlecode.greenbridge.conversations.web.TagController" >
      <constructor-arg ref="tagManager" /> 
  </bean>

  <bean name="/conversation/**" class="com.googlecode.greenbridge.conversations.web.ConversationController" >
      <constructor-arg ref="conversationManager" />
      <constructor-arg ref="storeMediaStrategy" />
      <constructor-arg ref="storeFreemindStrategy" />
  </bean>

  <bean name="/project/**" class="com.googlecode.greenbridge.conversations.web.ProjectController" >
      <constructor-arg ref="projectManager" />
      <constructor-arg  ref="conversationDao" />
  </bean>
  <bean name="/person/**" class="com.googlecode.greenbridge.conversations.web.PersonController" >
    <constructor-arg ref="personManager" />
    <constructor-arg  ref="conversationDao" />
    <constructor-arg  ref="slugger" />
  </bean>
  <bean name="/search**" class="com.googlecode.greenbridge.conversations.web.SearchController" >
      <constructor-arg ref="conversationManager" />
  </bean>

  <bean name="/freemind/**" class="com.googlecode.greenbridge.conversations.web.FolderResourceServlet" >
      <property name="folder" value="${freemind.dir}" />
  </bean>
  <bean name="/mp3/**" class="com.googlecode.greenbridge.conversations.web.FolderResourceServlet" >
      <property name="folder" value="${ofla.dir}" />
      <property name="contentDispositionHeader"  value="true" />
  </bean>

  <!--
    View resolver. Has custom view to support theme based page resolution.
  -->
  <bean id="internalResourceViewResolver"
    class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="order" value="1" />
    <property name="viewClass"
      value="org.springframework.web.servlet.view.JstlView" />
    <property name="prefix" value="/WEB-INF/jsp/" />
    <property name="suffix" value=".jsp" />
  </bean>

  <!-- Message bundle sources	-->
  <bean id="messageSource"
    class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basenames">
      <list>
        <value>bundles.message
        </value>
      </list>
    </property>
  </bean>

  <!-- Declare the Resolver -->
  <bean id="localeResolver"
    class="org.springframework.web.servlet.i18n.SessionLocaleResolver" />

    <bean id="db4oserver" class="org.springmodules.db4o.ObjectServerFactoryBean">
        <property name="databaseFile" value="${db.dir}"/>
        <property name="port" value="0"/>
    </bean>

    <bean id="remoteServerContainer" class="org.springmodules.db4o.ObjectContainerFactoryBean">
         <property name="server" ref="db4oserver"/>
    </bean>
    <bean id="conversationDao" class="com.googlecode.greenbridge.conversations.dao.Db4oConversationDao">
        <property name="objectContainer" ref="remoteServerContainer" />
    </bean>
</beans>
